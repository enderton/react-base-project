{
  // 0 - turn rule off; 1 - turn rule on as a warning;
  // 2 - turn rule on as an error
  "extends": "airbnb",  // sets react plugin as well
  "rules": {
    // overrides any settings from parent configuration
    "comma-dangle": [2, "never"],
    "eqeqeq": [2, "smart"],
    "no-unused-vars": [2, {
      "vars": "local",
      "args": "none"
    }],
    "jsx-quotes": [1, "prefer-single"],
    "react/jsx-closing-bracket-location": 2,
    "react/jsx-curly-spacing": [2, "always"],
    "react/jsx-quotes": 0,
    "react/jsx-pascal-case": 2,
    "react/prop-types": 0,
    "react/sort-comp": 0,
    "spaced-comment": 0,
    "strict": [0, "function"]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx",
          ".less"
        ]
      }
    }
  }
}
